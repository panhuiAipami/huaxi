<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/book_reader_free_chapter_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:text="免费"
            android:textColor="@color/book_reader_main_color"
            android:textSize="12sp"
             />

        <TextView
            android:id="@+id/book_reader_chapter_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/book_reader_free_chapter_text_view"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/book_reader_common_text_color"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:id="@+id/book_reader_line_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/book_reader_divide_line_height"
        android:layout_marginLeft="15dp"
        android:background="@color/book_reader_divide_line_color" />
</LinearLayout>