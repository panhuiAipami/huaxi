<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textStyle="bold"
        android:text="title"
        android:textColor="@color/square_user_speak"
        android:textSize="16sp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:riv_corner_radius="6dp" />

    <TextView
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="content"
        android:textColor="@color/square_introduce"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reader"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/reader_hot_icon"
            android:drawablePadding="5dp"
            android:gravity="center_vertical|left"
            android:text="content"
            android:textColor="@color/square_small"
            android:textSize="12sp" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="25dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/look_details"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="查看详情"
                android:textColor="@color/square_comment_selector"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="3dp"
                android:src="@mipmap/look_more_icon"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
