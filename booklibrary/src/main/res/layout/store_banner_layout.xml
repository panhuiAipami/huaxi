<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.zhouwei.mzbanner.MZBannerView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="160dp"></com.zhouwei.mzbanner.MZBannerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/classification_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/classification_icon"
            android:gravity="center"
            android:text="分类"
            android:textColor="@color/square_user_speak"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/ranking_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/ranking_icon"
            android:gravity="center"
            android:text="排行"
            android:textColor="@color/square_user_speak"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/monthly_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/monthly_icon"
            android:gravity="center"
            android:text="包月"
            android:textColor="@color/square_user_speak"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/sign_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/sign_icon_new"
            android:gravity="center"
            android:text="签到"
            android:textColor="@color/square_user_speak"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/monthly_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/monthly_bg_color"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/monthly_hint_text"
            android:textColor="@color/monthly_hint_bg"
            android:textSize="16sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@color/c10_themes_color2"></View>

        <TextView
            android:id="@+id/gotoMonthly_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="立即开通"
            android:textColor="@color/goto_monthly_bg"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
