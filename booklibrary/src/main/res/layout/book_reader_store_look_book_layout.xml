<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/book_reader_see_all_book_layout"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/book_reader_see_all_book_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/book_reader_horizontal_margin"
            android:cursorVisible="true"
            android:gravity="center_vertical"
            android:text="@string/book_reader_see_all_book_text"
            android:textColor="#bbbbbb"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/book_reader_all_book_image_view"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:src="@drawable/book_reader_see_all_image" />
    </LinearLayout>

    <View
        android:id="@+id/book_reader_line_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/book_reader_divide_line_height"
        android:layout_marginLeft="@dimen/book_reader_horizontal_margin"
        android:background="#e6e6e6" />
</LinearLayout>