<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c13_themes_color"
    android:orientation="vertical">


    <EditText
        android:id="@+id/user_edit_content"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@null"
        android:gravity="top"
        android:hint="写评论"
        android:imeOptions="actionSend"
        android:maxLength="140"
        android:padding="10dp"
        android:singleLine="true"
        android:textSize="16sp"
        app:theme="@style/MyEditText" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/book_reader_divide_line_color"></View>

    <TextView
        android:id="@+id/select_text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="10dp"
        android:textColor="@color/two_font_color"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/book_reader_divide_line_color"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/cancel_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@mipmap/edit_book_close"
            android:text="取消"
            android:textColor="@color/square_small"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/square_small"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/send_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/square_send_bg"
            android:drawablePadding="3dp"
            android:enabled="false"
            android:text="发送"
            android:textColor="@color/square_send_text"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
