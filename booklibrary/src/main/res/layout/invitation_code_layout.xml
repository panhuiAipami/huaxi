<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/code_layout"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/author_follow_dialog_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/code_bg" />

        <TextView
            android:id="@+id/text_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_bg"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="输入好友邀请你的邀请码"
            android:textColor="@color/square_user_speak"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_code"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_hint"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@null"
            android:gravity="center"
            android:hint="请输入邀请码"
            android:lines="1"
            android:textSize="16sp"
            android:theme="@style/CodeEditText" />

        <View
            android:id="@+id/line"
            android:layout_width="120dp"
            android:layout_height="2dp"
            android:layout_below="@id/edit_code"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:background="@color/c02_themes_color"></View>

        <TextView
            android:id="@+id/finish_text"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@id/line"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/code_finish"
            android:enabled="false"
            android:gravity="center"
            android:text="领取金币"
            android:textColor="@color/c13_themes_color"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:src="@mipmap/code_icon" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/colse_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/code_layout"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:src="@mipmap/red_close" />

</RelativeLayout>
