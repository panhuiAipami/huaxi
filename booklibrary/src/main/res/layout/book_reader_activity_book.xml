<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/book_reader_home_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/book_reader_top_bar_height"
        android:layout_weight="1" />

    <View
        android:id="@+id/icon_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/book_reader_divide_line_height"
        android:background="@color/book_reader_divide_line_color" />

    <include layout="@layout/book_reader_bottom_layout" />
</LinearLayout>