<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@android:color/transparent">


    <LinearLayout
        android:id="@+id/linear_role_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/author_follow_dialog_bg"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@mipmap/huaxi_icon" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="开启消息推送"
            android:textColor="@color/one_font_color"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="开启通知，各种消息不容错过"
            android:textColor="@color/three_font_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/open_push"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/button_blue_select2"
            android:gravity="center"
            android:text="立即开启"
            android:textColor="@color/c13_themes_color"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/close_dialog"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/linear_role_details"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:src="@mipmap/red_close"></ImageView>
</RelativeLayout>