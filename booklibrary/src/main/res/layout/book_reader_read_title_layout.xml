<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/book_reader_top_bar_height"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/read_book_title"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:visibility="gone"
        android:text="111"
        android:layout_height="@dimen/book_reader_top_bar_height" />
    <ImageView
        android:id="@+id/book_reader_buy_image_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/book_reader_top_bar_height"
        android:paddingLeft="@dimen/book_reader_page_right_layout_padding"
        android:paddingRight="@dimen/book_reader_page_right_layout_padding"
        android:src="@drawable/book_reader_buy_day_selector"
        android:visibility="gone" />



    <ImageView
        android:id="@+id/book_reader_add_shelf_image_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/book_reader_top_bar_height"
        android:paddingLeft="@dimen/book_reader_page_right_layout_padding"
        android:paddingRight="@dimen/book_reader_page_right_layout_padding"
        android:src="@drawable/book_reader_download_day_selector" />


    <ImageView
        android:id="@+id/book_reader_home_image_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/book_reader_top_bar_height"
        android:paddingLeft="@dimen/book_reader_page_right_layout_padding"
        android:paddingRight="@dimen/book_reader_page_right_layout_padding"
        android:src="@drawable/book_reader_home_day_selector"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/book_reader_reward_image_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/book_reader_top_bar_height"
        android:paddingLeft="@dimen/book_reader_page_right_layout_padding"
        android:paddingRight="@dimen/book_reader_page_right_layout_padding"
        android:src="@drawable/book_reader_reward_day_selector"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/book_reader_more_image_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/book_reader_top_bar_height"
        android:paddingLeft="@dimen/book_reader_page_right_layout_padding"
        android:src="@drawable/book_reader_more_day_selector" />
</LinearLayout>