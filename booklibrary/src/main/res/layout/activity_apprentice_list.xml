<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical"
    android:paddingTop="47dp"
    tools:context="com.spriteapp.booklibrary.ui.activity.ApprenticeListActivity">

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        tl:tl_indicator_color="@color/code_btn_bg_color"
        tl:tl_indicator_height="3dp"
        tl:tl_indicator_width="25dp"
        tl:tl_tab_space_equal="true"
        tl:tl_textBold="true"
        tl:tl_textSelectColor="#333333"
        tl:tl_textUnselectColor="#666666"
        tl:tl_textsize="16sp"></com.flyco.tablayout.SlidingTabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>
