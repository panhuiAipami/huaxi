<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ranking_five_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_background"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/top_num"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLength="2"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="1"
            android:textColor="@color/square_support_selector"
            android:textSize="20sp" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ranking_book_cover"
            android:layout_width="95dp"
            android:layout_height="126dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="6dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ranking_book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="未命名作品"
                android:textColor="@color/square_user_speak"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ranking_book_intro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="2"
                android:text="描述"
                android:textColor="@color/square_small"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/author_cover"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/deafultheadicon"
                    app:riv_oval="true" />

                <TextView
                    android:id="@+id/ranking_book_author"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="name"
                    android:textColor="@color/ranking_author_name"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/ranking_book_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:drawableLeft="@mipmap/square_support_img"
                    android:drawablePadding="3dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="@color/square_small"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/ranking_book_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawableLeft="@mipmap/square_comment_img"
                    android:drawablePadding="3dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="@color/square_small"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="8dp"
                android:background="@color/c10_themes_color2"></View>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

