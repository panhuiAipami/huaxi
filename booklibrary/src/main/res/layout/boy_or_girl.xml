<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/pop_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/selector_man"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/man_blue"
        android:drawablePadding="6dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:text="男生"
        android:textColor="@color/c13_themes_color" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/c09_divider_color"></View>

    <TextView
        android:id="@+id/selector_woman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/woman_pink"
        android:drawablePadding="6dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:text="女生"
        android:textColor="@color/c13_themes_color" />

</LinearLayout>
