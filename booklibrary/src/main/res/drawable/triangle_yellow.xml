<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 正三角 -->
    <item>
        <rotate
            android:fromDegrees="48"
            android:pivotX="-20%"
            android:pivotY="80%">
            <shape android:shape="rectangle">
                <size
                    android:width="1dp"
                    android:height="1dp" />
                <solid android:color="@color/book_shelf_del_layout_bg" />
            </shape>
        </rotate>
    </item>
</layer-list>