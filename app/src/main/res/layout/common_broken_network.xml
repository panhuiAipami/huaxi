<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/c12_themes_color"
              android:clickable="true"
              android:gravity="center"
              android:orientation="vertical">


    <ImageView
        android:id="@+id/common_broken_network_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/common_broken_network"/>

    <TextView
        android:id="@+id/bookshelf_nonet_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="@string/not_available_network"
        android:textColor="#e1e1e1"
        android:textSize="15sp"/>

</LinearLayout>
