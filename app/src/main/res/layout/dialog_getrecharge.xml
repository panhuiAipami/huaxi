<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:weightSum="3"
    android:orientation="vertical"
    android:background="@drawable/line_recharge"
    android:layout_height="220dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="请选择充值金额"
        android:textColor="@color/ali_feedback_black"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:gravity="center_horizontal"/>
    <LinearLayout
        android:id="@+id/line_btn_recharge"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="100dp">
        <TextView
            android:id="@+id/dialgo_Recharge1"
            android:singleLine="false"
            android:layout_width="0dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/line_recharge"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:gravity="center"
/>
        <TextView
            android:id="@+id/dialgo_Recharge2"
            android:background="@drawable/line_recharge"
            android:layout_width="0dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:gravity="center"
            android:textSize="20sp"
            android:text="30"/>
        <TextView
            android:id="@+id/dialgo_Recharge3"
            android:background="@drawable/line_recharge"
            android:layout_width="0dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:textSize="20sp"
            android:gravity="center"
            android:text="50"/>
    </LinearLayout>
    <View
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:background="@color/assist_selected_color"
        android:layout_height="1dp"></View>
    <TextView
        android:id="@+id/recharge_cancel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="18sp"
        android:text="取消"/>

</LinearLayout>
