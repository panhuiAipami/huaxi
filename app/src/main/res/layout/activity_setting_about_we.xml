        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="花溪小说网"
        android:textColor="@color/c04_themes_color"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/setting_aboutwe_packagename_textview"
