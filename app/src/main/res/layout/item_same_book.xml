<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">


        <net.huaxi.reader.view.RoundImageView
            android:id="@+id/detail_same_item_imageview"
            android:layout_width="@dimen/smae_book_width"
            android:layout_height="@dimen/smae_book_height"
            android:layout_centerInParent="true"
            android:src="@mipmap/detail_book_default"
            app:borderRadius="5dp"
            app:type="round" />


        <TextView
            android:id="@+id/detail_same_bookname_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/shelf_item_image_layout"
            android:layout_alignRight="@id/shelf_item_image_layout"
            android:layout_below="@id/detail_same_item_imageview"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="是少时诵诗书"
            android:textColor="@color/c04_themes_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/detail_same_authorname_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/shelf_item_image_layout"
            android:layout_alignRight="@id/shelf_item_image_layout"
            android:layout_below="@id/detail_same_bookname_textview"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/c07_themes_color"
            android:textSize="11sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_detail_some_vip"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@id/detail_book_image"
        android:layout_alignTop="@id/detail_book_image"
        android:layout_marginLeft="12dp"
        android:scaleType="centerInside"
        android:src="@mipmap/detail_member"
        android:visibility="gone"
        />
</RelativeLayout>
