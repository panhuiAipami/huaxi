<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minHeight="45dp"
              android:background="@color/c12_themes_color"
              android:orientation="horizontal">


    <TextView
        android:id="@+id/item_recharge_order_create_time_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="45dp"
        android:layout_centerVertical="true"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="2015.11.16 09:30"
        android:textColor="@color/c05_themes_color"
        android:textSize="14sp"
        android:singleLine="true"
        />


    <TextView
        android:id="@+id/item_recharge_changetype_textview"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:layout_weight="1"
        android:gravity="center"
        android:text="微信"
        android:textColor="@color/c05_themes_color"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/item_recharge_paied_textview"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:layout_weight="1"
        android:gravity="center"
        android:text="6元"
        android:textColor="@color/c05_themes_color"
        android:textSize="14sp"
        />


    <TextView
        android:id="@+id/item_recharge_state_textview"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:layout_weight="1"
        android:gravity="center"
        android:text="成功"
        android:textColor="@color/c01_themes_color"
        android:textSize="14sp"
        />

</LinearLayout>
