<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/c12_themes_color"
              android:clickable="true"
              android:gravity="center"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/bookshelf_nobook_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/common_shelf_nothing"/>

    <TextView
        android:id="@+id/bookshelf_nobook_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookshelf_nobook_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="@string/bookshelf_nobook"
        android:textColor="#e1e1e1"
        android:textSize="15sp"/>
</LinearLayout>
