<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/item_search_out_layout"
        android:layout_width="match_parent"
        android:layout_height="132dp">


        <net.huaxi.reader.view.RoundImageView
            android:id="@+id/item_search_imageview"
            android:layout_width="72dp"
            android:layout_height="96dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="16dp"
            android:src="@mipmap/detail_book_default"
            app:borderRadius="5dp"
            app:type="round" />

        <ImageView
            android:id="@+id/iv_detail_some_vip"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerInside"
            android:src="@mipmap/detail_member"
            android:visibility="gone"/>


        <RelativeLayout
            android:id="@+id/item_search_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/item_search_imageview"
            android:layout_alignTop="@id/item_search_imageview"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="18dp"
            android:layout_toRightOf="@id/item_search_imageview">

            <TextView
                android:id="@+id/item_search_bookname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="特种兵在都市"
                android:textColor="@color/c04_themes_color"
                android:textSize="16sp"

                />

            <TextView
                android:id="@+id/item_search_authorname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_search_bookname"
                android:layout_marginTop="5dp"
                android:text="夜十三"
                android:textColor="#888888"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_search_desc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/item_search_authorname"
                android:layout_marginTop="11dp"
                android:ellipsize="end"
                android:lines="2"
                android:maxEms="16"
                android:textColor="#666" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
