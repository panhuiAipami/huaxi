<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_string_title"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/more_setting_content_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:text="默认"
        android:textColor="@color/c04_themes_color"
        android:textSize="@dimen/usercenter_content_textsize" />


    <ImageView
        android:id="@+id/item_string_check_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/setting_checked"
        android:layout_marginRight="15dp"

        />

</LinearLayout>
