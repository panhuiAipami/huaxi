<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/selector_category_bg"
              android:descendantFocusability="blocksDescendants"
              android:gravity="center"
              android:paddingTop="5dp"
              android:paddingBottom="5dp"
    >

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <TextView
           android:id="@+id/catalog_main_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="AAA"
           android:textColor="@color/c04_themes_color"
           android:textSize="16dp"
           />

       <TextView
           android:id="@+id/catalog_book_number"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="4dp"
           android:text="50"
           android:textColor="@color/c06_themes_color"
           android:textSize="12dp"
           />

   </LinearLayout>

    <ImageView
        android:id="@+id/catalog_icon"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginLeft="25dp"
        android:src="@mipmap/default_catalog"
        android:scaleType="centerInside"
        android:focusable="false"
        />

</LinearLayout>
