<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/selector_common_gray_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingRight="16dp">

    <CheckBox
        android:id="@+id/cb_download_child"
        style="@style/SmallCheckBoxStyle"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="8dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:paddingRight="8dp" />

    <TextView
        android:id="@+id/tv_download_chapter_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:textColor="#666"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_download_tag_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:text="@string/chapter_download"
        android:textColor="#999"
        android:textSize="14sp" />

</LinearLayout>
